{
  "name": "rotion",
  "productName": "Rotion",
  "version": "1.0.6",
  "description": "A simple clone of the popular note taking app Notion.",
  "main": "./out/main/index.js",
  "author": "isaiasdevlog.com",
  "homepage": "https://www.isaiasdevlog.com",
  "license": "MIT",
  "repository": { "type": "git", "url": "https://github.com/ssisaias/rotion" },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@phosphor-icons/react": "^2.0.13",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@tiptap/extension-document": "^2.1.11",
    "@tiptap/extension-highlight": "^2.1.11",
    "@tiptap/extension-placeholder": "^2.1.11",
    "@tiptap/extension-typography": "^2.1.11",
    "@tiptap/react": "^2.1.11",
    "@tiptap/starter-kit": "^2.1.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "electron-router-dom": "^1.0.5",
    "electron-store": "^6.0.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.16.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rocketseat/eslint-config": "^2.1.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^18.17.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.16",
    "electron": "^25.6.0",
    "electron-builder": "^24.6.3",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "postcss": "^8.4.31",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
